<section class="authentication">
    <section class="section__title authentication__title">Вход</section>

    <div class="authentication__content">
        <form class="authentication__form" id="login">
            <ul>
                <li>
                    <label for="email">Почта:</label>
                    <input type="email" id="email" name="email" required>
                </li>
                <li>
                    <label for="password">Пароль:</label>
                    <input type="password" id="password" name="password" required>
                </li>
                <li>
                    <p>Нет аккаунта? <a href="/signup">Создать аккаунт</a> </p>
                </li>
            </ul>

            <button type="submit" class="authentication__button">Войти</button>
        </form>
    </div>
</section>